// Jenkinsfile (Declarative Pipeline)
pipeline {
    agent { docker 'golang:1.16' }
    stages {
        stage('build') {
            steps {
                sh 'go env -w https://mirrors.aliyun.com/goproxy/'
                sh 'cd server/experiment_server && make build'
            }
        }
        stage('deploy') {
            steps {
                sh 'cd server/experiment_server && make deploy'
            }
        }
    }
}